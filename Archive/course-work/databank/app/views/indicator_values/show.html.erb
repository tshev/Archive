<%- model_class = IndicatorValue -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:country_id) %>:</strong></dt>
  <dd><%= @indicator_value.country_id %></dd>
  <dt><strong><%= model_class.human_attribute_name(:indicator_id) %>:</strong></dt>
  <dd><%= @indicator_value.indicator_id %></dd>
  <dt><strong><%= model_class.human_attribute_name(:value) %>:</strong></dt>
  <dd><%= @indicator_value.value %></dd>
  <dt><strong><%= model_class.human_attribute_name(:measure_datetime) %>:</strong></dt>
  <dd><%= @indicator_value.measure_datetime %></dd>
</dl>

<%= link_to t('.back', :default => t("helpers.links.back")),
              indicator_values_path, :class => 'btn btn-default'  %>
<%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_indicator_value_path(@indicator_value), :class => 'btn btn-default' %>
<%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              indicator_value_path(@indicator_value),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
